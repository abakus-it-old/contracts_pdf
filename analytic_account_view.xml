<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Add a tab with attachements -->
		<record model="ir.ui.view" id="account_analytic_attachements_form_view">
            <field name="name">analytic.account.attachements</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
				<page name="contract_page" position="after">
					<page string="Attachements">
							<field name="attachments_ids" widget="many2many_binary" string="Attach a file"/>
					</page>
				</page>
            </field>
        </record>
	</data>
</openerp>

